@import '~@/assets/stylus/mixin.styl'
html,
body,
div,
span,
h1,
h2,
h3,
h4,
h5,
h6,
p,
pre,
a,
address,
big,
cite,
img,
q,
small,
sub,
sup,
b,
i,
dl,
dt,
dd,
ol,
ul,
li,
form,
label,
table,
tbody,
tfoot,
thead,
tr,
th,
td,
footer,
header,
menu,
nav,
output,
section,
time,
audio,
video,
button,
input {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  border: none;
  font: inherit;
  vertical-align: baseline;
  font-family: PingFang SC,Hiragino Sans GB,NotoSansCJKsc,Helvetica Neue,Roboto,"Microsoft Yahei";
  color: #222;
}
html {
  /* 禁止横竖屏切换是重新计算文本大小 */
	-webkit-text-size-adjust: 100%;
}
html,
body {
  width: 100%;
  height: 100%;
  margin: 0 !important;
}
/* 上下拉动滚动条时出现 __卡顿、慢__ 情况 */
body {
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  /* 禁止复制粘贴 */
  // -webkit-user-select: none;
  // -moz-user-select: none;
  // -khtml-user-select: none;
  // user-select: none;
}


/* HTML5 display-role reset for older browsers */

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section {
  display: block;
}

body {
  line-height: 1;
}

ol,
ul,li {
  list-style: none;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

button {
  -webkit-appearance: none;
  background: none;
  outline: none;
}

a {
  text-decoration: none;
}

i,
em,
span {
  display: inline-block;
}

input,
textarea {
  border: none;
  outline: none;
  background: none;
  resize: none;
}


/* ios 设置input 按钮样式会被默认样式覆盖 */
input,
textarea {
  border: 0;
  -webkit-appearance: none;
  font-family PingFang SC, Hiragino Sans GB, NotoSansCJKsc, Helvetica Neue, Roboto, "Microsoft Yahei"
}
img {
  vertical-align: bottom;
  width: 100%;
  height: 100%;
}

.clear {
  zoom: 1;
}

.clear:after {
  clear: both;
  content: "";
  display: block;
}

::-webkit-scrollbar {
  display: none
  width: 0;
  height: 0;
  opacity: 0;
}

.ivu-page {
  .ivu-page-item-active {
      background $font-dark
  }
  .ivu-page-item {
    color $font-light
    border 1px solid $font-light
  }
}
